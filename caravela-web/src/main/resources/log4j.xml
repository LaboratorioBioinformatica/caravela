<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss,SSS} %5p [%-20c{1}] %m%n" />
		</layout>
	</appender>


	<appender name="caravela" class="org.apache.log4j.FileAppender">
		<param name="File" value="logs/caravela.log" />
		<param name="Append" value="false" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
		</layout>
	</appender>


	<category name="br.usp.iq.lbi.caravela">
		<priority value="INFO" />
		<appender-ref ref="caravela" />
	</category>
	
	<category name="br.usp.iq.lbi.caravela.controller">
		<priority value="INFO" />
		<appender-ref ref="stdout" />
	</category>

	<category name="br.com.caelum.vraptor">
		<priority value="INFO" />
		<appender-ref ref="stdout" />
	</category>
	
</log4j:configuration>